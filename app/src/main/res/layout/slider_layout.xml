<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="@null"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="316dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/vectorpictureone"
                android:contentDescription="@string/viewpagerimage"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="34dp"
                android:background="@drawable/ic_vectorpencil"
                app:layout_constraintEnd_toEndOf="@+id/ivImage"
                app:layout_constraintTop_toTopOf="@+id/ivImage" />

            <View
                android:id="@+id/view"
                android:layout_width="23dp"
                android:layout_height="1dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="31dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/ivImage"
                app:layout_constraintTop_toTopOf="@+id/ivImage" />

            <TextView
                android:id="@+id/ivTextOne"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:fontFamily="@font/cookie"
                android:text="@string/yay"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/ivTextTwo"
                app:layout_constraintEnd_toEndOf="@+id/ivTextTwo"
                app:layout_constraintStart_toStartOf="@+id/ivTextTwo" />

            <TextView
                android:id="@+id/ivTextTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="61dp"
                android:layout_marginEnd="61dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/montserrat"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/thirdCircle"
                app:layout_constraintEnd_toEndOf="@+id/ivImage"
                app:layout_constraintStart_toStartOf="@+id/ivImage" />

            <View
                android:id="@+id/firstCircle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="42dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/vpcircle"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/ivImage"
                app:layout_constraintStart_toStartOf="@+id/ivImage" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_phone"
                app:layout_constraintBottom_toBottomOf="@+id/firstCircle"
                app:layout_constraintEnd_toEndOf="@+id/firstCircle"
                app:layout_constraintStart_toStartOf="@+id/firstCircle"
                app:layout_constraintTop_toTopOf="@+id/firstCircle" />


            <View
                android:id="@+id/secondCircle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/vpcircle"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/ivImage"
                app:layout_constraintEnd_toEndOf="@+id/ivImage" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="@+id/secondCircle"
                app:layout_constraintEnd_toEndOf="@+id/secondCircle"
                app:layout_constraintStart_toStartOf="@+id/secondCircle"
                app:layout_constraintTop_toTopOf="@+id/secondCircle" />

            <View
                android:id="@+id/thirdCircle"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/vpcircle"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/ivImage"
                app:layout_constraintEnd_toStartOf="@+id/secondCircle"
                app:layout_constraintStart_toEndOf="@+id/firstCircle" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_message"
                app:layout_constraintBottom_toBottomOf="@+id/thirdCircle"
                app:layout_constraintEnd_toEndOf="@+id/thirdCircle"
                app:layout_constraintStart_toStartOf="@+id/thirdCircle"
                app:layout_constraintTop_toTopOf="@+id/thirdCircle" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="75dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_group" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>